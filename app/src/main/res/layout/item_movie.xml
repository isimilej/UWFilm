<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="boxoffice"
            type="com.android.play.uwfilm.data.movie.BoxOffice" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingTop="4dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/ranking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:elevation="8dp"
            android:includeFontPadding="false"
            android:letterSpacing="-0.04"
            android:lines="1"
            android:lineSpacingExtra="0dp"
            android:shadowColor="#000000"
            android:shadowRadius="10"
            android:shadowDx="1.0"
            android:shadowDy="1.0"
            android:gravity="start|center_vertical"
            android:text="@{boxoffice.ranking}"
            android:textColor="#ffffff"
            android:textSize="42dp"
            android:textStyle="bold|italic"
            tools:text="10"/>

        <TextView
            android:id="@+id/rank_increment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginStart="-6dp"
            app:layout_constraintStart_toEndOf="@id/ranking"
            app:layout_constraintTop_toTopOf="parent"
            android:elevation="10dp"
            android:shadowColor="#ffffff"
            android:shadowDx="1.0"
            android:shadowDy="1.0"
            android:shadowRadius="4"
            android:text="+10"
            android:textColor="#fb334e"
            android:textSize="14dp"
            android:textStyle="bold|italic"
            tools:text="+10" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/thumb_card"
                android:layout_width="140dp"
                android:layout_height="168dp"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/thumb"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/thumb_age"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                app:layout_constraintEnd_toEndOf="@id/thumb_card"
                app:layout_constraintTop_toTopOf="parent"
                app:cardCornerRadius="2dp"
                app:cardElevation="8dp">

<!--                12: E9B62F-->
<!--                15: DD742F-->
<!--                all: 269C56-->
<!--                18: D92C36-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="12"
                    android:background="#E9B62F"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="0dp"
                    android:lines="1"
                    android:textColor="#ffffff"
                    android:elevation="8dp"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                tools:text="엔시티 드림 더 무비 : 인 어 드림"
                android:text="@{boxoffice.title}"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:lines="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="18dp"
                android:includeFontPadding="false"
                app:layout_constraintStart_toEndOf="@id/thumb_card"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                tools:text="ALL"
                android:text="@{boxoffice.genre}"
                app:layout_constraintStart_toEndOf="@id/thumb_card"
                app:layout_constraintTop_toBottomOf="@id/title"/>

            <TextView
                android:id="@+id/audience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                tools:text="899,900"
                android:text="899,900"
                app:layout_constraintStart_toEndOf="@id/thumb_card"
                app:layout_constraintTop_toBottomOf="@id/grade"/>

            <TextView
                android:id="@+id/open_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                tools:text="2022-11-30"
                android:text="@{boxoffice.openDate}"
                app:layout_constraintStart_toEndOf="@id/thumb_card"
                app:layout_constraintTop_toBottomOf="@id/audience"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>